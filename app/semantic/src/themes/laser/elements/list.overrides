
// Show Buttons only on hover
.ui.divided.middle.la-flex-list .item {
  display: flex;
  .button {
    opacity: 0;
    -webkit-transition: opacity 1s; /* For Safari 3.1 to 6.0 */
    transition: opacity 1s;
    &.disabled {
      opacity: 0!important;
      -webkit-transition: opacity 1s; /* For Safari 3.1 to 6.0 */
      transition: opacity 1s;
    }
  }

  &:hover .button {
    opacity: 1;
  }
  &:hover .button.disabled {
    opacity: 0.3!important;
  }
  .button:focus {
    opacity: 1;
  }
}
.ui.list.la-flex-list > .item > span  {
  align-self: center;
}
.ui.list.la-flex-list > .item > span + .content  {
  flex-basis: 90%;
  align-self: center;

}
.ui.list.la-flex-list > .item > span + .content + .content {
  flex-basis: 10%;
  align-self: center;
  text-align: right;
  display: inline-flex;
}

.la-list-border-around {
  border: 1px solid @laSecondaryColor;
}
.ui.item.person-details:hover {
  background: white!important;
}
.la-icon-list {
  margin-top: 0.714em;
  .item {
    display: table-row;
    >.ui.icon {
      display: table-cell;
      padding: 0 0 .2em .5em;
      vertical-align: middle;
    }
    .content {
      display: table-cell;
      width: 100%;
      padding: 0 0 .2em .5em;
      //vertical-align: middle;
    }
  }
}
// from bootstrap css, already woven into laser
dl {
  margin-bottom: 20px;
}
dt,
dd {
  line-height: 20px;
}
dt {
  font-weight: bold;
}
dd {
  margin-left: 10px;
}
// List for Breadcrumbs without list-style
.ui.breadcrumb {
    ul{
    display: inline;
    padding: 0;
        li {
        display: inline;
        }
    }
}